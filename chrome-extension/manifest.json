{
    "manifest_version": 3,
    "name": "Local RAG Agent",
    "version": "1.0.0",
    "description": "Syncs browser tab content with your Local RAG Agent for context-aware AI responses",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://127.0.0.1:8501/*",
        "http://localhost:8501/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}